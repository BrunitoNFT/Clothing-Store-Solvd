{
  "compilerOptions": {
    "module": "CommonJS",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "noEmit": true, // or "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["jest.config.ts", "src/**/*", "test/**/*"]
}
